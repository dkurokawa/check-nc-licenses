{
  "name": "check-nc-licenses",
  "version": "0.3.0",
  "description": "Lightweight CLI tool to scan Node.js projects for non-commercial (NC) licenses in dependencies - zero config, instant results",
  "main": "dist/index.js",
  "bin": {
    "check-nc-licenses": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prebuild": "node dist/index.js",
    "test": "vitest run",
    "pretest": "node dist/index.js",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:patterns": "node scripts/test-runner.js",
    "test:advanced": "node scripts/advanced-test.js",
    "test:all": "npm run test:patterns && npm run test:advanced",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "postinstall": "node dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "license",
    "checker",
    "non-commercial",
    "nc",
    "cli",
    "dependencies",
    "audit",
    "compliance",
    "lightweight",
    "fast",
    "zero-config",
    "commercial",
    "legal"
  ],
  "author": {
    "name": "Daisuke Kurokawa",
    "url": "https://github.com/dkurokawa"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dkurokawa/check-nc-licenses.git"
  },
  "bugs": {
    "url": "https://github.com/dkurokawa/check-nc-licenses/issues"
  },
  "homepage": "https://github.com/dkurokawa/check-nc-licenses#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "dotenv": "^17.2.2",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "type": "module"
}
